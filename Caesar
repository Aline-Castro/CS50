#include <cs50.h>
#include <stdio.h>
#include <ctype.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

bool check_key_value(string s);

int main(int argc, string argv[])
{
if (argc != 2 || !check_key_value(argv[1]))
{
printf ("Argumento ausente! (digite-o ap√≥s ./caesar)\n");
return 1;
}
int key = atoi(argv[1]);

string plaintext = get_string("plaintext: ");

printf("cyphertext: ");

for (int i = 0, len = strlen(plaintext); i < len; i++)
{
    char c = plaintext[i];
    if (isalpha(c))
    {
        char m = 'A';
        if (islower(c))
            m = 'a';
        printf ("%c", (c - m + key)%26 + m);
    }
    else
        printf ("%c", c);
}
printf("\n");
}

bool check_key_value(string s)
{
for(int j = 0, len2 = strlen(s); j < len2; j++)

    if (!isdigit(s[j]))
        return false;
return true;
}
